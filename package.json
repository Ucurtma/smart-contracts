{
  "name": "ucurtma-contract",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "truffle": "babel-node node_modules/.bin/truffle",
    "sol-merger": "sol-merger './contracts/*.sol' ./build",
    "test-contract": "yarn truffle migrate --network test && yarn truffle test --network test",
    "prepublishOnly": "yarn truffle compile && yarn cleanup && node ./scripts/local/injectDeployedAddresses.js",
    "deploy:mainnet": "yarn truffle migrate --network mainnet && node ./scripts/local/extractDeployedAddresses.js",
    "deploy:ropsten": "yarn truffle migrate --network ropsten && node ./scripts/local/extractDeployedAddresses.js",
    "deploy:kovan": "yarn truffle migrate --network kovan && node ./scripts/local/extractDeployedAddresses.js",
    "deploy:rinkeby": "yarn truffle migrate --network rinkeby && node ./scripts/local/extractDeployedAddresses.js",
    "deploy:avalanche_fuji": "yarn truffle migrate --network avalanche_fuji && node ./scripts/local/extractDeployedAddresses.js --network avax",
    "deploy:local": "yarn truffle migrate && node ./scripts/local/updateOtherReposWithDeployerAddress.js",
    "cleanup": "yarn truffle networks --clean",
    "verify": "yarn prepublishOnly && yarn truffle run verify"
  },
  "dependencies": {
    "@truffle/contract": "^4.1.6",
    "axios": "^0.21.1",
    "babel-cli": "^6.26.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "commander": "^4.1.0",
    "crypto": "^1.0.1",
    "eth-gas-reporter": "^0.2.14",
    "ethval": "^2.0.0",
    "moment": "^2.29.1",
    "node-static": "^0.7.11",
    "openzeppelin-solidity": "^2.4.0",
    "sol-merger": "^1.2.2",
    "truffle": "^5.1.3",
    "truffle-hdwallet-provider": "^1.0.17",
    "truffle-plugin-verify": "^0.3.8",
    "web3": "^1.2.5-rc.0",
    "web3-utils": "^1.2.4",
    "yargs": "^15.1.0"
  }
}
